                    <row header="no">
                        <cell halign="center" width="50%">Year</cell>
                        <cell halign="center" width="50%">Beginning Balance ($)</cell>
                        <cell halign="center" width="50%">Interest Earned ($)</cell>
                        <cell halign="center" width="50%">Ending Balance ($)</cell>
                    </row>
                    <row class="odd">
                        <cell halign="center" >1</cell>
                        <cell halign="center" >1000</cell>
                        <cell halign="center">50</cell>
                        <cell halign="center" >1050</cell>
                    </row>
                    <row class="even">
                    <cell halign="center">2</cell>
                    <cell halign="center">1050</cell>
                    <cell halign="center"></cell>
                    <cell halign="center"></cell>
                    </row>
                    <row class="odd">
                        <cell halign="center">3</cell>
                        <cell halign="center"></cell>
                        <cell halign="center"></cell>
                        <cell halign="center"></cell>
                    </row>
                </tabular>
                <answer>
                    <p>
                       <m>
                            \begin{align}
                            \text{F} &amp;= 1000 \left( 1 + \dfrac{0.05}{1} \right)^{1 \times 3}\\
                            &amp;= \$1{,}157.63
                            \end{align}
                        </m> 
                    </p>
                </answer>
