    <exercises xml:id="exercises-simple-interest">
        <exercise>
            <statement>
                <p>
                    Given the principal <m>P</m>, the annual interest rate <m>r</m>, and the time <m>t</m>, 
                    find the amount <m>F</m> that must be repaid.
                    <ol marker="(a)">
                        <li>
							<p>
								<m>P={}</m>$15,000, <m>r=6\%</m>, <m>t={}</m>5 years
							</p>
                        </li>

                        <li>
                            <p>
                                <m>P={}</m>$5,300, <m>r=2\%</m>, <m>t={}</m>3 months
                            </p>
                        </li>

                        <li>
                            <p>
                                <m>P={}</m>$9,000, <m>r=4.5\%</m>, <m>t={}</m>50 days
                            </p>
                        </li>
                    </ol>
                </p>
            </statement>
            <answer>
                <p>
                   <ol marker="(a)">
                    <li>
                        <p>
                            <m>$19,500.00</m>
                        </p>
                    </li>
                    <li>
